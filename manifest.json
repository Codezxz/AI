{
    "manifest_version": 3,
    "name": "Summarize Text",
    "version": "1.0",
    "description": "This extension allows users to enter data and send it to a Flask API",
    "background": {
      "service_worker": "Extensions/background.js"
    },
    "action": {
      "default_icon": "Extensions/icon.png",
      "default_popup": "Extensions/popup.html"
    },
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["Extensions/content.js"]
      }
    ]
  }